<link rel="stylesheet" href="/css/movie-actions.css">

<div class="movie-actions">

    <div class="rating-section">
        <h3>Califica esta película</h3>
        <div class="star-rating">
            <span class="star" data-rating="1">★</span>
            <span class="star" data-rating="2">★</span>
            <span class="star" data-rating="3">★</span>
            <span class="star" data-rating="4">★</span>
            <span class="star" data-rating="5">★</span>
        </div>
        <p id="rating-message"></p>
    </div>

    <div class="favorite-section">
        <button id="favorite-btn" class="btn-favorite">
            Añadir a Favoritos
        </button>
        <p id="favorite-message"></p>
    </div>

    <div class="review-section">
        <h3>Escribe una reseña</h3>
        <textarea id="review-text" rows="4" placeholder="Comparte tu opinión sobre esta película..."></textarea>
        <button id="submit-review-btn">Publicar Reseña</button>
        <p id="review-message"></p>
    </div>

</div>

<script src="/js/movie-actions.js"></script>